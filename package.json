{
  "name": "codex-convex-component-monorepo",
  "private": true,
  "packageManager": "pnpm@10.2.1",
  "scripts": {
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release:publish": "changeset publish",
    "component:build": "pnpm --filter @zakstam/codex-local-component run build",
    "component:typecheck": "pnpm --filter @zakstam/codex-local-component run typecheck",
    "component:test": "pnpm --filter @zakstam/codex-local-component run test",
    "component:ci": "pnpm --filter @zakstam/codex-local-component run ci",
    "host:generate": "pnpm --filter @zakstam/codex-local-component run build && node ./packages/codex-local-component/scripts/generate-host-surfaces.mjs",
    "host:check": "pnpm --filter @zakstam/codex-local-component run build && node ./packages/codex-local-component/scripts/generate-host-surfaces.mjs --check",
    "example:cli:start": "pnpm --filter codex-local-cli-example run start",
    "example:cli:typecheck": "pnpm --filter codex-local-cli-example run typecheck",
    "example:persistent:start": "pnpm --filter codex-local-persistent-cli-example run start",
    "example:persistent:typecheck": "pnpm --filter codex-local-persistent-cli-example run typecheck",
    "example:persistent:dev:convex": "pnpm --filter codex-local-persistent-cli-example run dev:convex",
    "example:persistent:dev:convex:once": "pnpm --filter codex-local-persistent-cli-example run dev:convex:once",
    "example:tauri:start": "pnpm --filter codex-local-tauri-example run start",
    "example:tauri:typecheck": "pnpm --filter codex-local-tauri-example run typecheck",
    "example:tauri:typecheck:convex": "pnpm --filter codex-local-tauri-example run typecheck:convex",
    "example:tauri:check": "pnpm --filter codex-local-tauri-example run tauri:check",
    "example:tauri:dev:convex": "pnpm --filter codex-local-tauri-example run dev:convex",
    "example:tauri:dev:convex:once": "pnpm --filter codex-local-tauri-example run dev:convex:once",
    "example:tauri:run": "bash -lc 'pnpm run example:tauri:dev:convex & CONVEX_PID=$!; trap \"kill $CONVEX_PID\" EXIT INT TERM; sleep 4; pnpm run example:tauri:start'",
    "smoke:start": "pnpm --filter codex-local-release-smoke-host run start",
    "smoke:typecheck": "pnpm --filter codex-local-release-smoke-host run typecheck",
    "smoke:typecheck:convex": "pnpm --filter codex-local-release-smoke-host run typecheck:convex",
    "smoke:dev:convex": "pnpm --filter codex-local-release-smoke-host run dev:convex",
    "smoke:dev:convex:once": "pnpm --filter codex-local-release-smoke-host run dev:convex:once",
    "smoke:checks": "pnpm --filter codex-local-release-smoke-host run smoke:checks",
    "lint:host": "eslint apps/release-smoke-host/src apps/release-smoke-host/convex apps/examples/persistent-cli-app/src apps/examples/cli-app/src --ext .ts",
    "release:precheck:ci": "pnpm run host:check && pnpm --filter @zakstam/codex-local-component run ci && pnpm run lint:host && pnpm --filter codex-local-release-smoke-host run typecheck && pnpm --filter codex-local-release-smoke-host run typecheck:convex && pnpm --filter codex-local-persistent-cli-example run typecheck && pnpm --filter codex-local-cli-example run typecheck",
    "release:precheck": "pnpm run host:check && pnpm --filter @zakstam/codex-local-component run ci && pnpm run lint:host && pnpm --filter codex-local-release-smoke-host run typecheck && pnpm --filter codex-local-release-smoke-host run typecheck:convex && pnpm --filter codex-local-persistent-cli-example run typecheck && pnpm --filter codex-local-cli-example run typecheck && pnpm --filter codex-local-release-smoke-host run smoke:checks",
    "build": "pnpm -r --if-present run build",
    "typecheck": "pnpm -r --if-present run typecheck",
    "test": "pnpm -r --if-present run test",
    "ci": "pnpm run host:check && pnpm --filter @zakstam/codex-local-component run ci && pnpm --filter codex-local-cli-example run typecheck && pnpm --filter codex-local-persistent-cli-example run typecheck && pnpm --filter codex-local-release-smoke-host run typecheck"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^9.37.0"
  }
}
