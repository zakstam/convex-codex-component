{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ConfigBatchWriteParams",
  "type": "object",
  "required": [
    "edits"
  ],
  "properties": {
    "edits": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/ConfigEdit"
      }
    },
    "expectedVersion": {
      "type": [
        "string",
        "null"
      ]
    },
    "filePath": {
      "description": "Path to the config file to write; defaults to the user's `config.toml` when omitted.",
      "type": [
        "string",
        "null"
      ]
    }
  },
  "definitions": {
    "ConfigEdit": {
      "type": "object",
      "required": [
        "keyPath",
        "mergeStrategy",
        "value"
      ],
      "properties": {
        "keyPath": {
          "type": "string"
        },
        "mergeStrategy": {
          "$ref": "#/definitions/MergeStrategy"
        },
        "value": true
      }
    },
    "MergeStrategy": {
      "type": "string",
      "enum": [
        "replace",
        "upsert"
      ]
    }
  }
}