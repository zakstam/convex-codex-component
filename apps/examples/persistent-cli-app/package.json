{
  "name": "codex-local-persistent-cli-example",
  "private": true,
  "type": "module",
  "scripts": {
    "prepare:component": "pnpm -C ../../.. run component:build",
    "dev:convex": "pnpm run prepare:component && convex dev",
    "dev:convex:once": "pnpm run prepare:component && convex dev --once",
    "wiring:smoke": "pnpm run dev:convex:once && node ./scripts/check-wiring-convex.mjs",
    "start": "pnpm run prepare:component && tsx src/index.ts",
    "typecheck": "pnpm run prepare:component && tsc --noEmit"
  },
  "dependencies": {
    "@zakstam/codex-local-component": "workspace:*",
    "convex": "^1.31.7"
  },
  "devDependencies": {
    "@types/node": "^22.13.1",
    "tsx": "^4.20.3",
    "typescript": "^5.7.3"
  }
}
