{
  "name": "codex-runtime-debug-harness",
  "private": true,
  "type": "module",
  "scripts": {
    "prepare:runtime": "pnpm -C ../../.. run runtime:build",
    "prepare:helper": "pnpm -C ../tauri-app run build:node",
    "start": "pnpm run prepare:runtime && pnpm run prepare:helper && tsx src/index.ts",
    "dev": "pnpm run start",
    "repro:no-response": "pnpm run prepare:runtime && pnpm run prepare:helper && tsx src/index.ts --scenario src/scenarios/no-response-repro.json",
    "typecheck": "pnpm run prepare:runtime && tsgo --noEmit",
    "typecheck:tsc": "pnpm run prepare:runtime && tsc --noEmit"
  },
  "dependencies": {
    "@zakstam/codex-runtime-bridge-tauri": "workspace:*",
    "@zakstam/codex-runtime": "workspace:*"
  },
  "devDependencies": {
    "@typescript/native-preview": "7.0.0-dev.20260221.1",
    "@types/node": "^22.19.11",
    "tsx": "^4.20.5",
    "typescript": "^5.9.3"
  }
}
