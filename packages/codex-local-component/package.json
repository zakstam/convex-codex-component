{
  "name": "@zakstam/codex-local-component",
  "version": "0.10.3",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.js"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.js"
    },
    "./react-integration": {
      "types": "./dist/react-integration/index.d.ts",
      "import": "./dist/react-integration/index.js"
    },
    "./errors": {
      "types": "./dist/errors.d.ts",
      "import": "./dist/errors.js"
    },
    "./convex.config": {
      "types": "./dist/component/convex.config.d.ts",
      "import": "./dist/component/convex.config.js"
    },
    "./convex.config.js": {
      "types": "./dist/component/convex.config.d.ts",
      "import": "./dist/component/convex.config.js"
    },
    "./bridge": {
      "types": "./dist/bridge.d.ts",
      "import": "./dist/bridge.js"
    },
    "./protocol": {
      "types": "./dist/protocol/index.d.ts",
      "import": "./dist/protocol/index.js"
    },
    "./app-server": {
      "types": "./dist/app-server/index.d.ts",
      "import": "./dist/app-server/index.js"
    },
    "./host": {
      "types": "./dist/host/index.d.ts",
      "import": "./dist/host/index.js"
    },
    "./host/convex": {
      "types": "./dist/host/convex-entry.d.ts",
      "import": "./dist/host/convex-entry.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LLMS.md",
    "docs"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsc -p tsconfig.build.json",
    "build:watch": "tsc -p tsconfig.build.json --watch --preserveWatchOutput",
    "generate:host-surfaces": "pnpm run build && node ./scripts/generate-host-surfaces.mjs",
    "check:host-surfaces": "pnpm run build && node ./scripts/generate-host-surfaces.mjs --check",
    "prepack": "pnpm run clean && pnpm run build",
    "typecheck": "tsc --noEmit",
    "test": "pnpm run build && node --test test/*.test.mjs",
    "check:mount-imports": "node ./scripts/check-mount-imports.mjs",
    "check:unsafe-types": "node ./scripts/check-unsafe-types.mjs",
    "check:error-discipline": "node ./scripts/check-error-discipline.mjs",
    "check:docs:single-path": "node ./scripts/check-docs-single-path.mjs",
    "ci": "pnpm run typecheck && pnpm run check:unsafe-types && pnpm run check:error-discipline && pnpm run test && pnpm run check:mount-imports && pnpm run check:host-surfaces && pnpm run check:docs:single-path"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "convex": "^1.17.4"
  },
  "devDependencies": {
    "@types/node": "^22.13.1",
    "@types/react": "^18.3.18",
    "typescript": "^5.7.3"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  }
}
