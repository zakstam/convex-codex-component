{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "JSONRPCRequest",
  "description": "A request that expects a response.",
  "type": "object",
  "required": [
    "id",
    "method"
  ],
  "properties": {
    "id": {
      "$ref": "#/definitions/RequestId"
    },
    "method": {
      "type": "string"
    },
    "params": true
  },
  "definitions": {
    "RequestId": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "integer",
          "format": "int64"
        }
      ]
    }
  }
}